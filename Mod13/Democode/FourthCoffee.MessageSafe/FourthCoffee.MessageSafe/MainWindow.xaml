<Window x:Class="FourthCoffee.MessageSafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fourth Coffee Message Safe" Height="334" Width="650">
    <Grid Margin="0,0,0,3">
        <Label Content="Password:" Margin="20,12,551,57" />

        <Label Content="Message:" Margin="20,44,551,216" />
        <TextBox x:Name="messageText" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Margin="88,44,119,50"  />
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="535,222,0,0" VerticalAlignment="Top" Width="75"   Click="save_Click"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="88,12,0,0" VerticalAlignment="Top" Width="427" Height="27"/>
        <Button x:Name="load" Content="Load" HorizontalAlignment="Left" Margin="535,19,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.44,-4.05" Click="load_Click"/>
        <Label x:Name="status" Margin="88,250,119,10" />
    </Grid>
</Window>
