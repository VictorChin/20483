        <TextBox x:Name="folderPathTextBox" HorizontalAlignment="Left" Height="26" Margin="40,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="372"/>
        <Label Content="Folder containing individual reports:" HorizontalAlignment="Left" Height="23" Margin="40,21,0,0" VerticalAlignment="Top" Width="372"/>
        <Button x:Name="browse" Content="Browse..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="431,49,0,0" Click="browse_Click"/>
    </Grid>
</Window>
